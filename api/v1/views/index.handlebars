<script>
    async function shortenLink() {
        const longUrlInput = document.getElementById('longUrl');
        const longUrl = longUrlInput.value;
        const resultArea = document.getElementById('resultArea');
        const shortenedUrlElem = document.getElementById('shortenedUrl');
        const btn = document.getElementById('shortenBtn');

        if (!longUrl) {
            alert('אנא הזן קישור תקין');
            return;
        }

        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

        try {
            const response = await fetch('/api/link/shorten', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ longUrl: longUrl })
            });

            const data = await response.json();

            if (data.shortUrl) {
                shortenedUrlElem.innerText = window.location.origin + '/' + data.shortCode;
                resultArea.classList.remove('d-none');
                longUrlInput.value = '';
            } else {
                alert('שגיאה ביצירת הקישור');
            }
        } catch (error) {
            alert('חלה שגיאה בחיבור לשרת');
        } finally {
            btn.disabled = false;
            btn.innerHTML = '<i class="bi bi-link-45deg"></i> קצר קישור';
        }
    }

    function copyToClipboard(btn) {
        const text = document.getElementById('shortenedUrl').innerText;
        navigator.clipboard.writeText(text).then(() => {
            const originalContent = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-check-lg"></i> הועתק';
            btn.classList.replace('btn-outline-dark', 'btn-success');
            setTimeout(() => {
                btn.innerHTML = originalContent;
                btn.classList.replace('btn-success', 'btn-outline-dark');
            }, 2000);
        });
    }
</script>